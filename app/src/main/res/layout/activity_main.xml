<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.k13006kk.libraryprj_test.MainActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="UUID"
                android:id="@+id/textView"
                android:layout_alignBaseline="@+id/uuid"
                android:layout_alignBottom="@+id/uuid"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="50dp"
                android:textStyle="bold"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="："
                android:id="@+id/textView5"
                android:layout_column="1"
                android:layout_marginTop="50dp"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="null"
                android:id="@+id/uuid"
                android:layout_above="@+id/major"
                android:layout_toEndOf="@+id/textView"
                android:layout_column="2"
                android:layout_marginTop="50dp"
                android:textSize="24sp"
                android:layout_span="4" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="major"
                android:id="@+id/textView2"
                android:layout_alignTop="@+id/major"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="30dp"
                android:textStyle="bold"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="："
                android:id="@+id/textView6"
                android:layout_column="1"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="null"
                android:id="@+id/major"
                android:layout_above="@+id/minor"
                android:layout_toEndOf="@+id/textView2"
                android:layout_column="2"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="minor"
                android:id="@+id/textView3"
                android:layout_above="@+id/minor"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="30dp"
                android:textStyle="bold"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="："
                android:id="@+id/textView7"
                android:layout_column="1"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="null"
                android:id="@+id/minor"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_alignStart="@+id/major"
                android:layout_column="2"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="RSSI"
                android:id="@+id/textView4"
                android:layout_below="@+id/rssi"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="30dp"
                android:textStyle="bold"
                android:textSize="24sp"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="："
                android:id="@+id/textView8"
                android:layout_column="1"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="null"
                android:id="@+id/rssi"
                android:layout_below="@+id/minor"
                android:layout_toEndOf="@+id/textView"
                android:layout_column="2"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_column="7">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="DATE"
                android:id="@+id/textView9"
                android:layout_column="0"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="："
                android:id="@+id/textView10"
                android:layout_column="1"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextClock
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:timeZone="Asia/Tokyo"
                android:format24Hour="yyyy/MM/dd"
                android:format12Hour="yyyy/MM/dd"
                android:layout_span="3" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="TIME"
                android:id="@+id/textView11"
                android:layout_column="0"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="："
                android:id="@+id/textView12"
                android:layout_column="1"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextClock
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:timeZone="GMT+900"
                android:textSize="24sp"
                android:format24Hour="HH:mm:ss"
                android:format12Hour="hh:mm:ss"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="STATE"
                android:id="@+id/textView13"
                android:layout_column="1"
                android:textSize="28sp"
                android:layout_marginTop="40dp"
                android:layout_gravity="right|top"
                android:layout_span="2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="："
                android:id="@+id/textView14"
                android:layout_column="3"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_marginTop="40dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="部屋外"
                android:id="@+id/state"
                android:layout_column="4"
                android:layout_marginTop="40dp"
                android:textSize="28sp"
                android:textColor="#2c8ddb" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="          "
                android:id="@+id/textView15"
                android:layout_column="5" />

        </TableRow>

    </TableLayout>

</RelativeLayout>
